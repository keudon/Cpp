{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "GOL_Compiler",
            "command": "C:\\Program Files\\CodeBlocks\\MinGW\\bin\\cpp.exe",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.o",
                "-Wall"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Tâche générée par le débogueur."
        },
        {
            "type": "cppbuild",
            "label": "GOL_Linker",
            "command": "C:\\Program Files\\CodeBlocks\\MinGW\\bin\\cpp.exe",
            "args": [
                "${fileDirname}/${fileBasenameNoExtension}.o",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe",
                "-lgdiplus",
                "-lgdi32",
                "-luser32",
                "-lkernel32",
                "-lcomctl32"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Tâche générée par le débogueur."
        },
        {
            "label": "Compile_and_Link_GOL",
            "dependsOn": [
                "GOL_Compiler",
                "GOL_Linker"
            ],
            "dependsOrder": "sequence",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}